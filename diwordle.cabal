-- diwordle.cabal
cabal-version:       3.0
name:                diwordle
version:             0.1.0.0
synopsis:            Un juego tipo Wordle en Haskell
description:         Una implementaciÃ³n del popular juego Wordle usando Haskell y Cabal.
license:             MIT
license-file:        LICENSE
author:              Tu Nombre
maintainer:          tu.email@ejemplo.com
category:            Juegos
build-type:          Simple

library
  exposed-modules:     
        CLI, 
        Core, 
        Game
  
  hs-source-dirs:      src
  build-depends:       base >=4.7 && <5,
                       containers,
                       tinyapp ^>=0.2.1.0,
                       unordered-containers
  default-language:    Haskell2010

executable diwordle
  main-is:             Main.hs
  hs-source-dirs:      app
  build-depends:       base >=4.7 && <5,
                       diwordle,
                       brick >=0.66.1,
                       vty >=5.34.0
  ghc-options:        -threaded
  default-language:    Haskell2010

test-suite diwordle-test
  type:                exitcode-stdio-1.0
  main-is:             Spec.hs
  hs-source-dirs:      test
  build-depends:       base >=4.7 && <5,
                       diwordle,
                       hspec,
                       hspec-expectations,
                       hspec-core,
                       HUnit,
                       quickcheck-io,
                       hspec-expectations >=0.8.4,
                       brick
  default-language:    Haskell2010
